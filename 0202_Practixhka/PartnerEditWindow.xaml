<Window x:Class="_0202_Practixhka.PartnerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0202_Practixhka"
        mc:Ignorable="d"
        Title="Редактирование заявки" Height="400" Width="500"
        Icon="/Новые технологии.ico" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Данные заявки" FontSize="18" FontWeight="Bold" 
                  Foreground="#FF546F94" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Text="Партнер" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbPartner" DisplayMemberPath="partner_name" 
                     SelectedValuePath="ID" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Продукт" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbProduct" DisplayMemberPath="product_name" 
                     SelectedValuePath="ID" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Количество" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtQuantity" Height="25" Margin="0,0,0,10"
                    ToolTip="Введите количество продукции"
                    PreviewTextInput="NumberValidationTextBox"/>

            <StackPanel>
                <TextBlock Text="Информация о стоимости:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtPriceInfo" Text="Цена: 0 руб." FontSize="12"/>
                <TextBlock x:Name="txtTotalCost" Text="Общая стоимость: 0 руб." FontSize="12" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Click="CancelButton_Click" Width="80" Height="30" 
                   Margin="0,0,10,0" Background="#FF536E93" Foreground="White"/>
            <Button Content="Сохранить" Click="SaveButton_Click" Width="80" Height="30"
                   Background="#FF536E93" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
