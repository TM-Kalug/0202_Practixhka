<Window x:Class="_0202_Practixhka.Requests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0202_Practixhka"
       mc:Ignorable="d"
        Title="Заявки партнеров" Height="728" Width="1200" 
        Icon="/Новые технологии.ico" WindowStartupLocation="CenterScreen">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="← Назад" Click="BackButton_Click" 
                    Width="80" Height="30" Margin="20,0,0,0" VerticalAlignment="Center"
                    Background="#FF536E93" Foreground="White"/>

            <TextBlock Grid.Column="1" Text="Заявки партнеров" FontSize="20" FontWeight="Bold" 
                      Foreground="#FF546F94" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Button Grid.Column="2" Content="+ Добавить заявку" Click="AddRequest_Click" 
                    Width="120" Height="30" Margin="0,0,20,0" VerticalAlignment="Center"
                    Background="#FF28A745" Foreground="White" FontWeight="Bold"/>
        </Grid>

        <Grid Grid.Row="1" Margin="20,10,20,10" Background="White">
            <Canvas x:Name="listRequestsCanvas">
                <ListView x:Name="listRequests" Width="1140" HorizontalAlignment="Left" Height="550" 
                         Canvas.Left="0" Canvas.Top="0" VerticalAlignment="Top" 
                         Background="White" BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         MouseDoubleClick="ListRequests_MouseDoubleClick">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </Canvas>
        </Grid>
    </Grid>
</Window>
