<Window x:Class="_0202_Practixhka.CalculateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0202_Practixhka"
        mc:Ignorable="d"
        Title="Расчет материалов" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Расчет необходимого материала" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15" Foreground="#FF546F94"/>

        <TextBlock Grid.Row="1" Text="Тип продукции:" Margin="0,5"/>
        <ComboBox Grid.Row="2" x:Name="cmbProductType" DisplayMemberPath="name" 
                  SelectedValuePath="ID" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Text="Тип материала:" Margin="0,5"/>
        <ComboBox Grid.Row="4" x:Name="cmbMaterialType" DisplayMemberPath="material_type1" 
                  SelectedValuePath="ID" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" Text="Требуемое количество продукции:" Margin="0,5"/>
        <TextBox Grid.Row="6" x:Name="txtRequiredQuantity" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="7" Text="Количество на складе:" Margin="0,5"/>
        <TextBox Grid.Row="8" x:Name="txtWarehouseQuantity" 
                 PreviewTextInput="IntValidationTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="9" Text="Параметры продукции:" FontWeight="SemiBold" Margin="0,10,0,5"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBox x:Name="txtParameter1" Width="80" 
                     PreviewTextInput="DoubleValidationTextBox" Margin="0,0,10,0"/>
            <TextBox x:Name="txtParameter2" Width="80" 
                     PreviewTextInput="DoubleValidationTextBox"/>
        </StackPanel>

        <TextBlock Grid.Row="11" x:Name="txtResult" Text="Результат: " 
                   FontWeight="Bold" FontSize="14" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Рассчитать" Click="CalculateButton_Click" 
                    Padding="15,5" Margin="0,0,10,0" Background="#FF536E93" Foreground="White"/>
            <Button Content="Очистить" Click="ClearButton_Click" 
                    Padding="15,5" Margin="0,0,10,0" Background="#FF536E93" Foreground="White"/>
            <Button Content="Назад" Click="BackButton_Click" 
                    Padding="15,5" Background="#FF536E93" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>